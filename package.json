		"vite-plugin-image-optimizer": "^2.0.0"
	},
	"scripts": {
		"start": "npm run server",
		"dev": "npm run client:dev & npm run server:dev",
		"husky": "husky install",
		"clean": "rm -rf client/dist && rm -rf server/dist",
		"build": "npm run client:build-dev && npm run server:build",
		"server": "node --enable-source-maps server/dist/index.js",
		"server:build": "npm run server:tsc && node esbuild.js",
		"server:dev": "tsx watch --tsconfig server/tsconfig.json server/src",
		"server:tsc": "tsc --p server/tsconfig.json",
		"client:build-dev": "npm run client:tsc && vite build client/",
		"client:build-prod": "npm run client:tsc && npm run client:render-cards && vite build client/ --mode production",
		"client:render-cards": "./card-prerender/render.sh",
		"client:render-cards-nt": ".\\card-prerender\\render.bat",
		"client:tsc": "tsc --p client/",
		"client:dev": "vite client",
		"client:preview": "vite preview --port 3002 client/",
		"test": "npm run test:unit && npm run test:snapshot && npm run test:ct && npm run test:api && npm run test:e2e",
		"test:api": "./tests/sh/test-api",
		"test:unit": "jest tests/unit/ --detect-open-handles",
		"test:vunit": "UNIT_VERBOSE=true jest tests/unit/ --detect-open-handles",
		"test:unit-v": "npm run test:unit-verbose",
		"test:db": "jest tests/db/",
		"test:replays": "jest tests/replays/ --detect-open-handles",
		"test:starter-decks": "jest tests/unit/game/starter-decks.test.ts",
		"test:snapshot": "jest tests/snapshots/ --env jsdom",
		"test:snapshot-update": "jest tests/snapshots/ --env jsdom --updateSnapshot",
		"test:e2e": "playwright test",
		"test:ct": "playwright test -c playwright-ct.config.ts",
		"test:ct-update": "npm run test:ct -- -u",
		"test:fuzz": "cd tests/fuzz && npx tsx index.ts",
		"lint": "biome check .",
		"fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
